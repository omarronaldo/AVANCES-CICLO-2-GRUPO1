<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pe.edu.upeu.sysgui.controlador.MainController"
>
    <center>
        <VBox >
            <Label text="Nombre" />
            <TextField fx:id="nombreField" />
            <Label text="Asistencia" />
            <TextField fx:id="asisRegField" />
            <Button onAction="#registrar" text="Registrar" fx:id="btnReg"
            />
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
            <ListView fx:id="listView" prefHeight="150" prefWidth="250"/>
        </VBox>
    </center>
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0"
                 BorderPane.alignment="CENTER">
            <items>
                <Button mnemonicParsing="false" text="Archivo" />
                <Button mnemonicParsing="false" text="Editar" />
            </items>
        </ToolBar>
    </top>
</BorderPane>